@model ConnectCRM.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="display-4">CRM Dashboard</h1>
</div>

<div class="row mt-4">
    <!-- Total Accounts Card -->
    <div class="col-md-3 mb-4">
        <div class="stat-card stat-card-primary">
            <div class="stat-card-icon">
                <i class="fas fa-building"></i>
            </div>
            <div class="stat-card-info">
                <div class="stat-label">TOTAL ACCOUNTS</div>
                <div class="stat-value">@Model.TotalAccounts</div>
            </div>
        </div>
    </div>

    <!-- Total Contacts Card -->
    <div class="col-md-3 mb-4">
        <div class="stat-card stat-card-info">
            <div class="stat-card-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-card-info">
                <div class="stat-label">TOTAL CONTACTS</div>
                <div class="stat-value">@Model.TotalContacts</div>
            </div>
        </div>
    </div>

    <!-- Open Opportunities Card -->
    <div class="col-md-3 mb-4">
        <div class="stat-card stat-card-warning">
            <div class="stat-card-icon">
                <i class="fas fa-handshake"></i>
            </div>
            <div class="stat-card-info">
                <div class="stat-label">OPEN OPPORTUNITIES</div>
                <div class="stat-value">@Model.OpenOpportunities</div>
            </div>
        </div>
    </div>

    <!-- Total Revenue Card -->
    <div class="col-md-3 mb-4">
        <div class="stat-card stat-card-success">
            <div class="stat-card-icon">
                <i class="fas fa-dollar-sign"></i>
            </div>
            <div class="stat-card-info">
                <div class="stat-label">TOTAL REVENUE (WON)</div>
                <div class="stat-value">@Model.TotalRevenueWon.ToString("C0")</div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h4>Recent Accounts</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Industry</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in Model.RecentAccounts)
                {
                    <tr>
                        <td>@account.Name</td>
                        <td>@account.Industry</td>
                        <td><a asp-controller="Account" asp-action="Details" asp-route-id="@account.Id">Details</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <h4>High-Value Opportunities</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Opportunity Name</th>
                    <th>Account</th>
                    <th>Amount</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var opp in Model.HighValueOpportunities)
                {
                    <tr>
                        <td>@opp.Name</td>
                        <td>@opp.Account?.Name</td>
                        <td>@opp.Amount.ToString("C")</td>
                        <td><a asp-controller="Opportunity" asp-action="Details" asp-route-id="@opp.Id">Details</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>