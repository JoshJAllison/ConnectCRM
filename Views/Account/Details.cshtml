@model ConnectCRM.Models.Account

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Account</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Industry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Industry)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Website)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Website)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Street)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Street)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PostalCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
    </dl>
</div>

<hr />

<div class="mt-4">
    <h4>Contacts</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model.Contacts)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => contact.FirstName) @Html.DisplayFor(modelItem => contact.LastName)</td>
                    <td>@Html.DisplayFor(modelItem => contact.Email)</td>
                    <td>@Html.DisplayFor(modelItem => contact.Phone)</td>
                    <td><a asp-controller="Contact" asp-action="Details" asp-route-id="@contact.Id">Details</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-4">
    <h4>Opportunities</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Stage</th>
                <th>Amount</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var opportunity in Model.Opportunities)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => opportunity.Name)</td>
                    <td>@Html.DisplayFor(modelItem => opportunity.Stage)</td>
                    <td>@Html.DisplayFor(modelItem => opportunity.Amount)</td>
                    <td><a asp-controller="Opportunity" asp-action="Details" asp-route-id="@opportunity.Id">Details</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>