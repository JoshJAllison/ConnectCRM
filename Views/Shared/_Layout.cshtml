<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ConnectCRM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ConnectCRM.styles.css" asp-append-version="true" />
</head>
<body>
    <div id="wrapper">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <button id="sidebar-toggle" class="btn btn-light">
                    <i class="fa-solid fa-bars"></i>
                </button>
            </div>
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i> <span>Home</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Index"><i class="fa-solid fa-building"></i> <span>Accounts</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Contact" asp-action="Index"><i class="fa-solid fa-address-book"></i> <span>Contacts</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Opportunity" asp-action="Index"><i class="fa-solid fa-handshake"></i> <span>Opportunities</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fa-solid fa-shield-halved"></i> <span>Privacy</span></a>
                </li>
            </ul>
        </div>

        <!-- Main Content Area -->
        <div class="content-wrapper">
            <header class="top-bar">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ConnectCRM</a>
                <div class="profile-section">
                    <div class="profile-icon">
                        <i class="fa-solid fa-user"></i>
                    </div>
                </div>
            </header>

            <main role="main" class="main-content">
                @RenderBody()
            </main>

            <footer class="footer">
                <div class="container">
                    &copy; 2025 - ConnectCRM - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>