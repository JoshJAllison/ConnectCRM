<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ConnectCRM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "Home";
    }

    <header class="top-bar">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">ConnectCRM</a>
        <div class="profile-section">
            <div class="profile-icon" title="Profile">
                <i class="fa-solid fa-user"></i>
            </div>
        </div>
    </header>

    <div id="wrapper">
        <!-- Sidebar -->
        <div class="sidebar">
            <ul class="sidebar-nav">
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-table-columns fa-fw"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Account" ? "active" : "")" asp-controller="Account" asp-action="Index">
                        <i class="fa-solid fa-building fa-fw"></i>
                        <span>Accounts</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Contact" ? "active" : "")" asp-controller="Contact" asp-action="Index">
                        <i class="fa-solid fa-address-book fa-fw"></i>
                        <span>Contacts</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Opportunity" ? "active" : "")" asp-controller="Opportunity" asp-action="Index">
                        <i class="fa-solid fa-handshake fa-fw"></i>
                        <span>Opportunities</span>
                    </a>
                </li>
            </ul>
            <div class="sidebar-footer">
                <button id="sidebar-toggle" title="Toggle Sidebar">
                    <i class="fa-solid fa-chevron-left"></i>
                </button>
            </div>
        </div>

        <!-- Main Content Area -->
        <main class="content-body" role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>